<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount"
    android:background="@color/white">

    <ImageView
        android:id="@+id/changeAccountDetailsImage"
        android:layout_width="406dp"
        android:layout_height="234dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/changeaccountdetailsimage"
        tools:ignore="ContentDescription,MissingConstraints" />

    <EditText
        android:id="@+id/editTextChangeUsername"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="33dp"
        android:hint="Change username"
        android:inputType="textEmailAddress"
        android:textColorHint="#78909C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeAccountDetailsImage"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/editTextChangeEmail"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:hint="Change email"
        android:inputType="textEmailAddress"
        android:textColorHint="#78909C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextChangeUsername"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/editTextChangePassword"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:autofillHints="password"
        android:hint="Current password"
        android:inputType="textPassword"
        android:textColorHint="#78909C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextChangeEmail"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextConfirmChangedPassword"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:autofillHints="password"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="#78909C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextChangePassword"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonSaveChanges"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="@color/black"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmChangedPassword"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>
